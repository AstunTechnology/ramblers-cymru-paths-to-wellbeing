{%- set currentLanguage %}{{ page.url | getCurrentLanguage }}{% endset -%}
<!DOCTYPE html>
<html lang="{{ locale }}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/static/css/common.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    {% block head %}{% endblock %}
    <title>{{ title }} - {{ 'Paths to Wellbeing' | i18n(null, locale) }}</title>
  </head>
  <body>
    <div id="content">
      <header>
        <div id="top">
          <div class="container">
            <h1>
              <a href="/{{ locale + '/' if currentLanguage else '' }}"
                >{{ 'Paths to Wellbeing' | i18n(null, locale) }}</a
              >
            </h1>
            {% if currentLanguage %}
            <div id="lang-switcher">
              {% set alternativeLanguage %}{{ page.url | getAlternativeLanguage
              }}{% endset %}
              <a
                href="{{ page.url | getAlternativeLanguageUrl }}"
                hreflang="{{ alternativeLanguage }}"
                class="btn"
                >{{ 'Cymraeg' if alternativeLanguage == 'cy' else 'English'
                }}</a
              >
            </div>
            {% endif %}
          </div>
        </div>
        <div class="container">
          <img
            class="logo"
            src="/static/img/ramblers_cymru_logo.png"
            alt="Ramblers Cymru Logo"
          />
          {% if currentLanguage %}
          <nav>
            <ul>
              {% set url %}/{{ locale }}/{% endset %}
              <li>
                <a href="{{ url }}" class="{{ 'active' if url === page.url }}"
                  >{{ 'Home' | i18n(null, locale) }}</a
                >
              </li>
              {% set url %}/{{ locale }}/about/{% endset %}
              <li>
                <a href="{{ url }}" class="{{ 'active' if url === page.url }}"
                  >{{ 'About' | i18n(null, locale) }}</a
                >
              </li>
              {% set url %}/{{ locale }}/map/{% endset %}
              <li>
                <a href="{{ url }}" class="{{ 'active' if url === page.url }}"
                  >{{ 'Map' | i18n(null, locale) }}</a
                >
              </li>
            </ul>
          </nav>
          {% endif %}
        </div>
      </header>
      <main>
        <div class="container">
          {% block content %} {{ content | safe }} {% endblock %}
        </div>
      </main>
      <footer>
        <div class="container">
          <div class="logo-social">
            <img
              class="logo"
              src="/static/img/ramblers_cymru_logo_dark_bg.png"
              alt="Ramblers Cymru Logo"
            />
            <div class="social">
              <ul>
                <li>
                  <a
                    href="https://en-gb.facebook.com/RamblersCymru/"
                    rel="noopener"
                    target="_blank"
                    aria-label="{{ 'Visit Facebook' | i18n(null, locale) }}"
                    title="{{ 'Visit Facebook' | i18n(null, locale) }}"
                  >
                    <svg
                      class="icon"
                      aria-hidden="true"
                      viewBox="0 0 11 19"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg"
